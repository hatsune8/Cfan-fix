

<div class="row">
  <div class="container">

    <div class="col-xs-3"></div>

    <div class="col-xs-6">
      <div class="form-group">
        <%= form_with model:@user, local:true do |f| %>
          <div class="edit-profile-image">
            <%= f.file_field :image, class: 'img_field', style: 'display:none;' %>
            <%= attachment_image_tag @user, :image, :fill, 300, 300, fallback: 'no_image2.png', size:'300x300', onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev img-circle profile-image' %>
          </div>
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "nameを入力して下さい" %>
          <%= f.text_area :introduction, class: "form-control input-lg", placeholder: "introductionを入力して下さい" %>
          <%= f.submit "変更を保存", class: "btn btn-default center-block form-btn btn-lg" %>
        <% end %>
      </div>
      <div class="withdrawal-btn">
        <%= link_to "退会する", user_withdrawal_path, class: "btn btn-danger" %>
      </div>

    </div>

    <div class="col-xs-3"></div>

  </div>
</div>
